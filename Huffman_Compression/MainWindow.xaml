<Window x:Class="FileCompression.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Compression" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>            
        </Grid.RowDefinitions>

        <Button Content="Browse Files" Click="BrowseFiles_Click" Margin="10"/>
        <ListBox Name="fileListBox" Margin="10" Grid.Row="10" />
        <Button Content="Compress" Click="Compress_Click" Margin="10" Grid.Row="40" />
    </Grid>
</Window>


